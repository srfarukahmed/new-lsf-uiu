{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": "./",
    "paths": {
      "@src/*": ["src/*"]
    },
    "outDir": "./dist",
    "typeRoots": ["./src/types", "./node_modules/@types"]
  },

  "include": ["src"],

  "exclude": ["node_modules", "dist"]
}
